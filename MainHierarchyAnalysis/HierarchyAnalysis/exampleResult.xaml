<UserControl x:Class="HierarchyAnalysis.exampleResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HierarchyAnalysis"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding People}"/>
        <TextBlock Grid.Row="1" Text="{Binding Criterion}"/>
        <TextBlock Grid.Row="2" Text="{Binding Alternative}"/>
        <TextBlock Grid.Row="3" Text="{Binding Result}"/>
    </Grid>
</UserControl>
